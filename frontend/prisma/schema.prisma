generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String   @map("password_hash")
  role          String   @default("admin")
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("admins")
}

model Creator {
  id               String    @id @default(uuid())
  name             String
  email            String    @unique
  passwordHash     String    @map("password_hash")
  isActive         Boolean   @default(true) @map("is_active")
  termsAcceptedAt  DateTime? @map("terms_accepted_at")
  createdAt        DateTime  @default(now()) @map("created_at")
  
  projects         Project[]

  @@index([email])
  @@index([isActive])
  @@map("creators")
}

model Project {
  id            String    @id @default(uuid())
  creatorId     String?   @map("creator_id")
  title         String
  description   String
  techStack     String    @map("tech_stack")
  category      String
  previewImages String    @map("preview_images")
  externalLink  String    @map("external_link")
  isPublic      Boolean   @default(true) @map("is_public")
  metadata      String    @default("{}")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  creator       Creator?  @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@index([isPublic])
  @@index([category])
  @@index([createdAt])
  @@index([creatorId])
  @@map("projects")
}

model Rating {
  id        String   @id @default(uuid())
  rating    Int
  feedback  String?
  ipHash    String   @map("ip_hash")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([ipHash])
  @@index([createdAt])
  @@map("ratings")
}

model Contact {
  id          String   @id @default(uuid())
  email       String
  phone       String?
  socialLinks String   @default("{}") @map("social_links")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("contact")
}

model ContactMessage {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  ipHash    String   @map("ip_hash")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([createdAt])
  @@map("contact_messages")
}
