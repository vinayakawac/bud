generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String   @map("password_hash")
  role          String   @default("admin")
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("admins")
}

model Creator {
  id               String    @id @default(uuid())
  name             String
  email            String    @unique
  passwordHash     String    @map("password_hash")
  isActive         Boolean   @default(true) @map("is_active")
  termsAcceptedAt  DateTime? @map("terms_accepted_at")
  createdAt        DateTime  @default(now()) @map("created_at")
  
  projects                Project[]
  collaborations          ProjectCollaborator[]
  sentInvitations         CollaborationInvite[] @relation("InviteSender")
  receivedInvitations     CollaborationInvite[] @relation("InviteReceiver")

  @@index([email])
  @@index([isActive])
  @@map("creators")
}

model Project {
  id            String    @id @default(uuid())
  creatorId     String?   @map("creator_id")
  title         String
  description   String
  techStack     String    @map("tech_stack")
  category      String
  previewImages String    @map("preview_images")
  externalLink  String    @map("external_link")
  isPublic      Boolean   @default(true) @map("is_public")
  metadata      String    @default("{}")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  creator       Creator?  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  comments      Comment[]
  ratings       Rating[]
  collaborators ProjectCollaborator[]

  @@index([isPublic])
  @@index([category])
  @@index([createdAt])
  @@index([creatorId])
  @@map("projects")
}

model Comment {
  id          String   @id @default(uuid())
  projectId   String   @map("project_id")
  parentId    String?  @map("parent_id")
  authorType  String   @default("user") @map("author_type") // "user" or "admin"
  name        String
  email       String
  content     String
  createdAt   DateTime @default(now()) @map("created_at")
  
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parent      Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[] @relation("CommentReplies")

  @@index([projectId])
  @@index([parentId])
  @@index([createdAt])
  @@map("comments")
}

model Rating {
  id        String   @id @default(uuid())
  projectId String?  @map("project_id")
  rating    Int
  feedback  String?
  ipHash    String   @map("ip_hash")
  createdAt DateTime @default(now()) @map("created_at")
  
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([ipHash])
  @@index([createdAt])
  @@map("ratings")
}

model Contact {
  id          String   @id @default(uuid())
  email       String
  phone       String?
  socialLinks String   @default("{}") @map("social_links")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("contact")
}

model ContactMessage {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  ipHash    String   @map("ip_hash")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([createdAt])
  @@map("contact_messages")
}

model ProjectCollaborator {
  id          String   @id @default(uuid())
  projectId   String   @map("project_id")
  creatorId   String   @map("creator_id")
  role        String?  @default("collaborator")
  addedAt     DateTime @default(now()) @map("added_at")
  
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  creator     Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@unique([projectId, creatorId])
  @@index([projectId])
  @@index([creatorId])
  @@map("project_collaborators")
}

model CollaborationInvite {
  id          String   @id @default(uuid())
  projectId   String   @map("project_id")
  senderId    String   @map("sender_id")
  receiverId  String   @map("receiver_id")
  status      String   @default("pending") // "pending", "accepted", "rejected"
  createdAt   DateTime @default(now()) @map("created_at")
  respondedAt DateTime? @map("responded_at")
  
  sender      Creator  @relation("InviteSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver    Creator  @relation("InviteReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([projectId, receiverId])
  @@index([receiverId, status])
  @@index([projectId])
  @@map("collaboration_invites")
}
